<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title><%= pagename %></title>
        <link rel="icon" type="image/x-icon" href="public/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/styles.css" rel="stylesheet" />
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <%- include('includes/nav') %>
        <!-- Masthead-->
        <section class="signup-section" id="signup">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col-md-10 col-lg-8 mx-auto text-center">
                        <h3>Authors Section</h3>
                        <% if(typeof(message) != 'undefined'){%>
                            <h4 name="message" style="color: green;"><%-message%></h4>
                        <%}%>
                        <div class="nav-link">
                            <!-- Add Author Button -->
                            <button style="background-color: green; border: none;">
                                <a style="color: black; text-decoration: none; text-overflow: ellipsis;" name="addAuhtor" href="/authors/addAuthor" alt="Add an Author" title="Add an Author">Add an Author</a>
                            </button>
                            <hr>
                        </div>
                        <div class="container px-4 px-lg-5">
                            <hr>
                            <% if(typeof(data) != 'undefined') {data.map(author => {%>
                             <span>
                                <button style="background-color: aqua; border: none;">
                                    <a style="color: black; text-decoration: none; text-overflow: clip;" name="editAuthor" href="/authors/editAuthor/<%- author._id %>">Edit This Author</a>
                                </button>
                             </span>
                             <span style="float: right;">
                                <button style="background-color: red; border: none;">
                                    <a style="color: black; text-decoration: none; text-overflow: clip;" name="deleteAuthor" href="/authors/deleteAuthor/<%- author._id %>">Delete This Author</a>
                                </button>
                             </span>  
                             <p>Name of Author: <span style="color: green;"><%- author.name %></span></p>
                             <p>Publisher: <span style="color: green;"><%- author.publisher %></span></p>
                             <p>Website: <span style="color: green;"><%- author.website %></span></p>
                             <p>About the Author: <span style="color: green;"><%- author.about %></span></p>
                             <h4>Book Written :- </h4>
                             <!-- &emsp; is used to print data in 1 tab right side -->
                             <p>&emsp;Title: <span style="color: green;"><%- author.authorWroteBook.title %></span></p>
                             <p>&emsp;Author: <span style="color: green;"><%- author.authorWroteBook.author %></span></p>
                             <p>&emsp;ISBN: <span style="color: green;"><%- author.authorWroteBook.ISBN %></span></p>
                             <p>&emsp;Number Of Page: <span style="color: green;"><%- author.authorWroteBook.noOfPages %></span></p>
                             <p>&emsp;Price: <span style="color: green;"><%- author.authorWroteBook.price %></span></p>
                             <p>&emsp;Year Published: <span style="color: green;"><%- author.authorWroteBook.yearPublished %></span></p>
                             <hr>
                            <%})}%>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <%- include('includes/footer') %> 
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/js/scripts.js"></script>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>
